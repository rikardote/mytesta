      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :adscription_id %><br>
    <%= f.collection_select :adscription_id, Adscription.order(:cod), :id, :name, include_blank: true %>
    
  </div>
  <div class="field">
    <%= f.label :department_id %><br>
    <%= f.grouped_collection_select :department_id, Adscription.order(:cod), :departments, :name, :id, :name, include_blank: true %>
    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
